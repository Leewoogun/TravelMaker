<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/layout_meeting_post_picture1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_meeting_post_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/background_imageview_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_meeting_post_picture_add"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:elevation="2dp"
        android:src="@drawable/ic_picture_add"
        app:layout_constraintBottom_toBottomOf="@id/layout_meeting_post_picture1"
        app:layout_constraintEnd_toEndOf="@id/layout_meeting_post_picture1"
        app:layout_constraintStart_toStartOf="@id/layout_meeting_post_picture1"
        app:layout_constraintTop_toTopOf="@id/layout_meeting_post_picture1" />
</androidx.constraintlayout.widget.ConstraintLayout>